/* General Styling */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  background-color: #f0f4f3;
  color: #333;
}

/* Header */
header {
  background-color: #006644;
  color: white;
  text-align: center;
  padding: 20px 0;
}

/* Main content */
main {
  max-width: 900px;
  margin: auto;
  padding: 20px;
}

/* Welcome section */
.welcome {
  text-align: center;
  margin-bottom: 40px;
}

/* News section */
.news ul {
  background: white;
  padding: 15px;
  border-radius: 8px;
  list-style: none;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
.news li {
  padding: 8px 0;
  border-bottom: 1px solid #ddd;
}
.news li:last-child {
  border-bottom: none;
}

/* Timetable section */
.timetable table {
  width: 100%;
  border-collapse: collapse;
  background-color: white;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
.timetable th, .timetable td {
  border: 1px solid #ccc;
  padding: 10px;
  text-align: center;
}
.timetable th {
  background-color: #009966;
  color: white;
}

/* Login form */
.login form {
  background: white;
  padding: 20px;
  border-radius: 8px;
  max-width: 400px;
  margin: auto;
  box-shadow: 0 2px 6px rgba(0,0,0,0.1);
}
.login input {
  width: 100%;
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid #ccc;
  border-radius: 4px;
}
.login button {
  background-color: #006644;
  color: white;
  padding: 10px;
  width: 100%;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}
.login button:hover {
  background-color: #004d33;
}

/* Footer */
footer {
  text-align: center;
  padding: 15px;
  background-color: #004d33;
  color: white;
  margin-top: 40px;
}
